<div class="container mt-5">
  <h3>All Blogs ðŸ˜‡</h3>

  <% blogs.reverse() %> <% blogs.forEach(blog=>{ %>
  <div class="card mt-3">
    <div class="card-body">
      <em class="text-muted">published at: <%= blog.postedAt %></em>
      <h5 class="card-title"><%= blog.title %></h5>
